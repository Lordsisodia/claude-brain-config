{
  "telemetry": {
    "enabled": true,
    "export_destinations": [
      "prometheus",
      "grafana"
    ],
    "alert_thresholds": {
      "latency_p95": 2.0,
      "error_rate": 0.02,
      "cost_per_request": 0.1
    }
  },
  "vector_db": {
    "primary_db": "faiss",
    "cache_enabled": true,
    "max_documents": 1000000
  },
  "memory": {
    "consolidation_interval_hours": 6,
    "max_memory_items": 500000,
    "learning_enabled": true
  },
  "optimization": {
    "cache_enabled": true,
    "batch_enabled": true,
    "compression_enabled": true
  },
  "workflows": {
    "max_parallel_workflows": 10,
    "checkpoint_enabled": true
  }
}